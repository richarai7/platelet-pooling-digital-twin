      "schema": "double",
      "writable": true
    },
    {
      "@type": "Property",
      "name": "target_volume_ml",
      "displayName": "Target Volume",
      "description": "Target pooled volume in mL",
      "schema": "double",
      "writable": false
    },
    {
      "@type": "Telemetry",
      "name": "units_pooled",
      "displayName": "Units Pooled",
      "description": "Number of units pooled so far",
      "schema": "integer"
    },
    {
      "@type": "Property",
      "name": "units_pooled",
      "displayName": "Current Units Pooled",
      "description": "Number of units pooled so far (as property for twin state)",
      "schema": "integer",
      "writable": true
    },
    {
      "@type": "Property",
      "name": "target_units",
      "displayName": "Target Units",
      "description": "Target number of units to pool",
      "schema": "integer",
      "writable": false
    },
    {
      "@type": "Telemetry",
      "name": "mixing_speed_rpm",
      "displayName": "Mixing Speed",
      "description": "Current mixing speed in RPM",
      "schema": "double",
      "unit": "revolutionsPerMinute"
    },
    {
      "@type": "Property",
      "name": "mixing_speed_rpm",
      "displayName": "Current Mixing Speed",
      "description": "Current mixing speed in RPM (as property for twin state)",
      "schema": "double",
      "writable": true
    },
    {
      "@type": "Telemetry",
      "name": "temperature_celsius",
