      "name": "deviceError",
      "displayName": "Device Error Event",
      "schema": {
        "@type": "Object",
        "fields": [
          {
            "name": "eventType",
            "schema": "string"
          },
          {
            "name": "errorState",
            "schema": "string"
          },
          {
            "name": "timestamp",
            "schema": "dateTime"
          }
        ]
      }
    },
    {
      "@type": "Command",
      "name": "startProcessing",
      "displayName": "Start Processing",
      "description": "Start processing a new batch",
      "request": {
        "name": "batchId",
        "schema": "string"
      },
      "response": {
        "name": "success",
        "schema": "boolean"
      }
    },
    {
      "@type": "Command",
      "name": "stopProcessing",
      "displayName": "Stop Processing",
      "description": "Stop the current processing operation",
      "response": {
        "name": "success",
        "schema": "boolean"
      }
    },
    {
      "@type": "Command",
      "name": "clearError",
      "displayName": "Clear Error",
      "description": "Clear the current error state",
      "response": {
        "name": "success",
        "schema": "boolean"
      }
    }
