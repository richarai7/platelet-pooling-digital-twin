# Simulator Configuration
DEVICE_ID=centrifuge-01
TELEMETRY_INTERVAL_SECONDS=5

# Azure IoT Hub Connection
# Get this from Azure Portal: IoT Hub > Devices > [Your Device] > Primary Connection String
IOT_HUB_DEVICE_CONNECTION_STRING=HostName=<your-iothub>.azure-devices.net;DeviceId=centrifuge-01;SharedAccessKey=<your-key>

# Azure Digital Twins (for backend function)
DIGITAL_TWINS_INSTANCE_URL=https://<your-adt-instance>.api.eus.digitaltwins.azure.net

# Event Hub Connection (for backend function)
EventHubConnectionString=Endpoint=sb://<your-eventhub>.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=<your-key>
